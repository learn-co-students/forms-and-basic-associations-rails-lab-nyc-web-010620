    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <%end%>
  </datalist>
  Genre: <%= f.select(:genre_id,@genre_list) %>
  <br />
  Notes:
  <ul>
  <li><%=text_field_tag "song[notes][]" %></li>
  <li><%=text_field_tag "song[notes][]" %></li>
  <li><%=text_field_tag "song[notes][]" %></li>
  </ul>

  <%= f.submit %>
<% end %>


